<br>
<div class="row">
  <div class="col-md-12 .col-sm-12 .col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="text-center">Order</h3>
      </div>
      <div class="panel-body">
        <div class="col-md-4">

            <%= image_tag @listing.listing_img, class: "img-responsive show-img" %>

          <h3><%= @listing.name %></h3>
          <h4><%= number_to_currency(@listing.price) %></h4>
        </div>
        <div class="col-md-8">
          <!-- form partial -->
          <%= render 'orders/form' %>
        </div>
      </div>
    </div>
    <%= link_to 'Back', listing_path( @listing ) %>
  </div>
</div>