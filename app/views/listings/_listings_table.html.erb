<table id="stocks" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
    </thead>
    <tbody>
    <% @listings.each do | listing | %>
      <tr>
        <td><%= "#{ listing.name }" %></td>
        <td><%= "#{ listing.description }" %></td>
        <td><%= "#{ listing.price }" %></td>
        <td><%= link_to "Show", listing_path( listing ), class: "btn btn-xs btn-success" %></td>
        <td><%= link_to "Edit", edit_listing_path( listing ), class: "btn btn-xs btn-warning" %></td>
        <td><%= link_to "Destroy", listing_path( listing ), method: :delete, class: "btn btn-xs btn-danger", data: { confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>