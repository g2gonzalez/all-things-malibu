<table class="table table-striped table-bordered table-hover">

    <tr>
      <th class="text-center">Image</th>
      <th class="text-center">Name</th>
      <th class="text-center">Description</th>
      <th class="text-center">Price</th>
      <th class="text-center">Action</th>
    </tr>

    <% @listings.each do | listing | %>
      <tr>
        <td class="text-center"><%= image_tag listing.listing_img, class: "img-responsive table-img" %></td>
        <td class="text-center"><%= listing.name %></td>
        <td class="text-center"><%= listing.description %></td>
        <td class="text-center"><%= number_to_currency( listing.price ) %></td>
        <td class="text-center">
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              Action <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Show", listing_path( listing ) %></li>
              <li><%= link_to "Edit", edit_listing_path( listing ) %></li>
              <li><%= link_to "Destroy", listing_path( listing ), method: :delete, data: { confirm: "Are you sure?"} %></li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>

</table>