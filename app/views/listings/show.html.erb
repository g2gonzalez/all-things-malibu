<div class="row">
  <div class="col-md-4 .col-sm-4 .col-xs-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading panel-img">
        <%= image_tag @listing.listing_img, class: "img-responsive show-img" %>
      </div>
      <div class="panel-footer">
        <h3><%= "#{ @listing.name }" %></h3>
        <p><%= "#{ @listing.description }" %></p>
        <p><%= "#{ @listing.price }" %></p>
        <p><%= link_to "Buy It Now", new_listing_order_path( @listing ), class: "btn btn-primary" %></p>
        <hr>
        <p>
          Sold by: <%= "#{ @listing.user.username }" %>
        </p>
        <% if current_user == @listing.user.id %>
          <%= link_to "Edit", edit_listing_path( @listing ), class: "btn btn-warning" %></td>
          <%= link_to "Destroy", listing_path( @listing ), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?"} %></td>
        <% end %>
      </div>
    </div>
    <%= link_to 'Back', listings_path  %>
  </div>
</div>


