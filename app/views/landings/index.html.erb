<div class="jumbotron">
  <h1 class="text-center">Welcome to All Things Malibu</h1>
</div>

<div class="row">

  <% @listings.each do | listing | %>
    <div class="col-sm-3 col-md-3">
      <div class="box panel panel-default">
        <div class="panel-heading panel-img">
          <%= image_tag listing.listing_img, class: "img-responsive index-img" %>
        </div>
        <div class="panel-footer">
          <h3><%= "#{ listing.name }" %></h3>
          <p><%= "$#{ listing.price }" %></p>
          <p><%= link_to "Show", listing_path( listing ), class: "btn btn-primary" %></p>
          <hr>
          <p>
            Sold by: <%= "#{ listing.user.username } #{ time_ago_in_words( listing.created_at ) } ago" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>

</div>